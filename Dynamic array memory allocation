#include <iostream>
#include <vector>
#include <iomanip>
#include <string.h>
#include <algorithm>
#include <cmath>
#include <ctime>
using namespace std;


int main(){
    int size;
    cout << "Size: ";
    cin >> size;
   int *arr = NULL;
   arr = new int[size];

   for (int i = 0; i < size; i++){
    cout << "Array [" << i << "] ";
    cin >> arr[i];
   }
   for (int i = 0; i < size; i++){
    cout << arr[i] << " ";
   }
   delete[] arr;
}
