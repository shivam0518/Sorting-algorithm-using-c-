#include <iostream>
#include <vector>
using namespace std;

int main(){
      vector <vector <int>> vec;
      int n;
      cout << "Enter the value of n: ";
      cin >> n;
      for (int i = 0; i < n; i++){
        vector <int> temp;
        for (int j = 0; j < i+ 1; j++){
                int x;
        cin >> x;
            temp.push_back(x);
        }
        vec.push_back(temp);
      }

      for (int i = 0; i < vec.size(); i++){
        for (int j = 0; j < vec[i].size(); j++){
            cout << vec[i][j] << " ";
          }
          cout << "\n";
      }

}
